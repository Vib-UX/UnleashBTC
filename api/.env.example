# API Environment Configuration
# Copy to `.env` and fill in values.

# Server
PORT=3000
CLIENT_URL=http://localhost:3001

# Starknet network RPC
# Example: Voyager Sepolia JSON-RPC (use any compatible provider)
RPC_URL=https://rpc.sepolia.voyager.online

# Ready account class hash (Required)
# Example (replace with your target class hash)
READY_CLASSHASH=0x036078334509b514626504edc9fb252328d1a240e4e948bef8d0c08dff45927f

# Demo contract for initial call (optional — used in paymaster demo)
CONTRACT_ADDRESS=
CONTRACT_ENTRY_POINT_GET_COUNTER=get_counter

# Counter demo configuration (optional — used by /privy/counter and /privy/increase-counter)
# If not set, the API will fall back to client-provided NEXT_PUBLIC_CONTRACT_ADDRESS (when available)
COUNTER_CONTRACT_ADDRESS=
# Override entrypoint names if your contract differs
COUNTER_ENTRYPOINT_GET=get_counter
COUNTER_ENTRYPOINT_INCREASE=increase_counter

# Privy server credentials (Required)
# Get from Privy Dashboard > App settings
PRIVY_APP_ID=
PRIVY_APP_SECRET=

# (Optional) Wallet API authorization key for server-side Wallet API
# Dashboard > Wallet API > Authorization Keys (prefix: wallet-auth:...)
PRIVY_WALLET_AUTH_PRIVATE_KEY=

# (Optional) Wallet policy to apply when creating wallets
PRIVY_WALLET_POLICY_ID=

# Paymaster (Optional)
# Configure to enable SNIP-29 paymaster deployment path
PAYMASTER_URL=https://sepolia.paymaster.avnu.fi
PAYMASTER_MODE=sponsored   # 'sponsored' or 'default'
# Required for sponsored mode
PAYMASTER_API_KEY=
# Required for default mode (if not using first supported token)
GAS_TOKEN_ADDRESS=
